              // Start of Privacy & Safety
              .category
                a#headingSeven.title.collapsed(href='#' data-toggle='collapse' data-target='#collapseSeven' aria-expanded='true' aria-controls='collapseSeven')
                  i.material-icons.md-30.online lock_outline
