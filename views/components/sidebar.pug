                        p No permissions set
                      label.switch
                        input(type='checkbox')
                        span.slider.round
              // End of Connections
              // Start of Appearance Settings
              .category
                a#headingFive.title.collapsed(href='#' data-toggle='collapse' data-target='#collapseFive' aria-expanded='true' aria-controls='collapseFive')
                  i.material-icons.md-30.online colorize
