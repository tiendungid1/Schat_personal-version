                        span.slider.round.mode
              // End of Appearance Settings
              // Start of Language
              .category
                a#headingSix.title.collapsed(href='#' data-toggle='collapse' data-target='#collapseSix' aria-expanded='true' aria-controls='collapseSix')
                  i.material-icons.md-30.online language
